{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "commonjs",                
    "lib": ["ES2020"],                   

    "rootDir": "./src",                  
    "outDir": "./dist",              

    "esModuleInterop": true,            
    "moduleResolution": "node",

    "strict": true,                      
    "skipLibCheck": true,               
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],

    "sourceMap": true
  },

  "include": ["src"],

  "exclude": ["node_modules", "dist"]
}
